<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_left_menu"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:layout_gravity="start"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_left_menu_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:paddingBottom="30dp"
        android:paddingTop="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/im_head_portrait"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/user_head"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:maxLines="1"
            android:text="15394414300"
            android:layout_marginTop="20dp"
            android:textSize="20sp"/>
    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/ll_left_menu_top"
        android:background="@color/colorHint"  />
    <ListView
        android:id="@+id/lv_drawerlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view"
        android:layout_marginLeft="20dp"
        android:background="@color/white"
        android:divider="@color/colorHint"
        android:dividerHeight="0.1dp"/>

</RelativeLayout>
