<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/img_background"
    android:orientation="vertical">

    <include layout="@layout/base_layout"/>

    <com.mb.smart.views.ClearableEditText
        android:id="@+id/et_tel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:drawableLeft="@mipmap/ic_login_user"
        android:drawablePadding="10dp"
        android:textColorHint="@color/colorHint"
        android:textColor="@color/colorWhite"
        android:background="@null"
        android:hint="@string/input_phone"
        android:textSize="@dimen/activity_text_size"
        android:inputType="number"
        tools:ignore="TextFields" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorGray"  />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp">

        <com.mb.smart.views.ClearableEditText
            android:id="@+id/et_code"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/icon_login_code"
            android:drawablePadding="10dp"
            android:layout_height="match_parent"
            android:textColorHint="@color/colorHint"
            android:textColor="@color/colorWhite"
            android:background="@null"
            android:hint="输入验证码"
            android:textSize="@dimen/activity_text_size"
            android:inputType="number"/>

        <View
            android:layout_width="0.1dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/colorHint"/>

        <TextView
            android:id="@+id/tv_send"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="end|bottom"
            android:textColor="@color/colorHint"
            android:textSize="@dimen/activity_text_size_small"
            android:text="发送验证码"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorGray"  />

    <com.mb.smart.views.ClearableEditText
        android:id="@+id/et_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:drawableLeft="@mipmap/ic_login_password"
        android:drawablePadding="10dp"
        android:textColorHint="@color/colorHint"
        android:textColor="@color/colorWhite"
        android:background="@null"
        android:hint="设置登录密码"
        android:textSize="@dimen/activity_text_size"
        android:inputType="textPassword"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorGray"  />

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/selector_blue_btn"
        android:textSize="@dimen/activity_text_size"
        android:text="注册"
        android:textColor="@color/colorWhite"
        android:gravity="center"/>
    <TextView
        android:id="@+id/tv_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="@dimen/activity_text_size"
        android:text="已有账号？返回登录"
        android:textColor="@color/colorHint"
        android:gravity="center"/>

</LinearLayout>
